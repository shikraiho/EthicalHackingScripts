{
    "tasks": [
      {
        "type": "shell",
        "label": "g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "-lsfml-network",
          "-lsfml-system"
        ],
        "options": {
          "cwd": "/usr/bin"
        }
      }
    ],
    "version": "2.0.0"
  }